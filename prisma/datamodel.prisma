type User {
    id: ID! @id
    email: String!
    password: String!

    tokesn: [AuthToken!]!

    profile: Profile!

    stripe: StripePayload
}

type AuthToken {
    accessToekn: String!
    kind: String!
}

type Profile {
    name: String!
    gender: String!
    location: String!
    website: String!
    picture: String!
}

type StripePayload {
    access_token: String!
    livemode: Boolean!
    refresh_token: String!
    token_type: String!
    stripe_publishable_key: String!
    stripe_user_id: String!
    scope: String!
}

type BookStore {
    id: ID! @id
    user: ID!
    name: String!
}

type Book {
    id: ID! @id
    bookStore: ID!
    name: String!
    price: Float!
}
